<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_focused="false" android:state_pressed="false" android:top="0dp" android:right="0dp" android:left="0dp">
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="@color/white" />
                <stroke android:width="2dp" android:color="@color/main_color" />
            </shape>
        </item>
        <item android:state_focused="false" android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                <gradient android:angle="0" android:endColor="@color/main_color" android:startColor="@color/main_light_color" />
                <corners android:radius="5dp" />
            </shape>
        </item>
    </selector>


